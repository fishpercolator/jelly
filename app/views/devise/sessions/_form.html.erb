    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: "form", class: 'signin-form' }) do |f| %>
      <div class="input-group">
	<span class="input-group-addon" id="email-addon"><%= glyph 'envelope' %></span>
        <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Email', aria: {describedby: 'email-addon'} %>
      </div>
      <div class="input-group">
	<span class="input-group-addon" id="password-addon"><%= glyph 'lock' %></span>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Password', aria: {describedby: 'password-addon'} %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
        <% end %>
      <%= f.submit  t('.sign_in', :default => "Sign in"), class: "btn btn-primary" %>
    <% end %>
