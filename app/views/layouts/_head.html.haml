- app ||= 'application'
%meta{:charset => "utf-8"}/
%meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge'}/
%meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
%title= content_for?(:title) ? "#{yield(:title)} - Jelly" : "Jelly"
= csrf_meta_tags
= favicon_link_tag '/favicon.ico'
= stylesheet_link_tag app, media: 'all', 'data-turbolinks-track' => true
= stylesheet_link_tag '//fonts.googleapis.com/css?family=Chewy', media: 'all'
= javascript_include_tag app, 'data-turbolinks-track' => true
%link{:href => "images/logo.png", :rel => "apple-touch-icon"}/
%link{:href => "images/logo-72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
%link{:href => "images/logo-114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
