- content_for :title do
  Admin: Users
%h1 Admin: Users
%table.table.table-striped
  %thead
    %tr
      %th Email
      %th Name
      %th Admin?
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.name
        %td 
          - if user.has_role?(:admin)
            %i.icon-ok
            Yes
          - else
            %i.icon-remove
            No
        %td
          = link_to edit_admin_user_path(user), :class => 'btn' do
            %i.icon-pencil
            Edit
          = link_to admin_user_path(user), :method => 'delete', :class => 'btn btn-danger', :confirm => "Are you sure you want to delete user #{user.email}?" do
            %i.icon-trash
            Delete

