= content_for :title do
  Meeting for #{@report.today}
#presentation
  .row-fluid.title
    .span9
      %h1
        = gravatar_for @report.user, 48, :class => 'gravatar-small'
        = gravatar_for @report.user, 64, :class => 'gravatar-large'
        = @report.user.name
        %small= @report.today
    .span3
      - if @prev
        / Hidden link for JS keypress event
        = link_to 'Prev', report_path(@prev, :present => true), :id => 'prev', :style => 'display:none'
      - if @next
        = link_to report_path(@next, :present => true), :id => 'next', :class => 'btn pull-right' do
          Next: 
          = gravatar_for @next.user, 16
          = @next.user.name
      - else
        = link_to 'Last report', reports_path(:date => @report.today.to_s(:db)), :id => 'next', :class => 'btn pull-right'
  .row-fluid
    .span6
      .well
        = render 'jelly', :jelly => @report.jelly
    .span6
      .well
        = render 'report_text', :report => @report

